{
    "include": ["src"],
    "compilerOptions": {
        "target": "es2020",
        "module": "es2020",
        "rootDir": "./src",
        "moduleResolution": "node",
        "declaration": true,
        "sourceMap": true,
        "outDir": "./lib",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true
    }
}
